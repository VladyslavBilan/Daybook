<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/posts_details"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context="com.bilan.postsApp.fragments.PostsDetailsFragment">

    <TextView
        android:id="@+id/posts_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:text="Title for article"
        android:textColor="#D60707"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="146dp"
        tools:layout_editor_absoluteY="16dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/category"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:background="#f2b183"
        android:paddingLeft="6sp"
        android:paddingTop="1sp"
        android:paddingRight="6sp"
        android:paddingBottom="1sp"
        android:text="Book"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/source"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="186dp" />

    <TextView
        android:id="@+id/source"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:background="#534255"
        android:paddingLeft="6sp"
        android:paddingTop="1sp"
        android:paddingRight="6sp"
        android:paddingBottom="1sp"
        android:text="Day"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/category"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="186dp" />

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/source"
            app:layout_constraintBottom_toBottomOf="parent" tools:layout_editor_absoluteX="-1dp"
            app:layout_constraintVertical_bias="1.0">

        <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_margin="15dp"/>
    </ScrollView>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/Title"
        app:layout_constraintTop_toBottomOf="@+id/posts_title"
        tools:layout_editor_absoluteX="8dp"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>